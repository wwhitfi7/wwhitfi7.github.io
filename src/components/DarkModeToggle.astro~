---
const { class: className, ...rest} = Astro.props
---
<label class:list={className}>
    <input id="dmode" type="checkbox">Toggle Theme</input>
</label>
<script>
document.getElementById("dmode").addEventListener("input", () => {
    if (document.getElementById("dmode").checked) {
        document.querySelector("body").classList.replace("light", "dark")
    } else {
        document.querySelector("body").classList.replace("dark", "light")
    }
})

document.getElementById("dmode").addEventListener("load", () => {
    if (document.getElementById("dmode").checked) {
        document.querySelector("body").classList.replace("light", "dark")
    } else {
        document.querySelector("body").classList.replace("dark", "light")
    }
})
</script>
